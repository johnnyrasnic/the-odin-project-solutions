<%= form_for @user do |f| %>
  <%= f.label "Email:" %>
  <%= f.email_field :email %>

  <%= f.label "Username:" %>
  <%= f.text_field :username %>

  <%= f.label "Password:" %>
  <%= f.password_field :password %>

  <%= f.submit "Create" %>
<% end %>
